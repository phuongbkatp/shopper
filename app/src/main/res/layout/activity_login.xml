<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/height_width_100dp"
        android:layout_height="@dimen/height_width_100dp"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_app_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <com.mcc.fshopper.view.MontserratTextView
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/pad_margin_20dp"
            android:text="@string/welcome_back"
            android:textColor="@color/title_color_welcome"
            android:textSize="@dimen/txt_size_25sp"
            android:textStyle="bold" />

        <com.mcc.fshopper.view.MontserratTextView
            android:id="@+id/loginMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/pad_margin_40dp"
            android:text="@string/please_sign_in"
            android:textSize="@dimen/txt_size_14sp" />

        <LinearLayout
            android:id="@+id/loginPanel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/pad_margin_20dp"
            android:orientation="horizontal">

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btnLoginFacebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>